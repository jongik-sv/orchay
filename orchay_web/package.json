{
  "name": "orchay_web",
  "version": "0.1.0",
  "description": "AI 기반 프로젝트 관리 도구",
  "author": "Orchay Team",
  "repository": {
    "type": "git",
    "url": "https://github.com/jongik-sv/orchay.git"
  },
  "type": "module",
  "main": "dist-electron/main/index.js",
  "files": [
    ".output/"
  ],
  "scripts": {
    "dev": "nuxt dev",
    "build": "cross-env NODE_NO_WARNINGS=1 nuxt build",
    "preview": "nuxt preview",
    "prepublishOnly": "npm run build",
    "postinstall": "nuxt prepare",
    "typecheck": "nuxt typecheck",
    "test": "vitest run --exclude 'tests/api/**'",
    "test:unit": "vitest run --exclude 'tests/api/**'",
    "test:watch": "vitest --exclude 'tests/api/**'",
    "test:coverage": "vitest run --coverage --exclude 'tests/api/**'",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:debug": "playwright test --debug",
    "electron:dev": "concurrently \"nuxt dev\" \"wait-on http://localhost:3000 && electron .\"",
    "electron:build": "cross-env NODE_NO_WARNINGS=1 nuxt build && electron-vite build",
    "electron:preview": "npm run electron:build && cross-env ELECTRON_DEV=false electron .",
    "dist:win": "npm run electron:build && electron-builder --win --config",
    "dist:mac": "npm run electron:build && electron-builder --mac --config",
    "dist:linux": "npm run electron:build && electron-builder --linux --config",
    "dist:all": "npm run electron:build && electron-builder -mwl --config",
    "tauri:dev": "tauri dev",
    "tauri:build": "tauri build",
    "tauri:build:debug": "tauri build --debug"
  },
  "engines": {
    "node": ">=20.0.0"
  },
  "devDependencies": {
    "@nuxt/test-utils": "^3.21.0",
    "@playwright/test": "^1.57.0",
    "@tauri-apps/api": "^2.9.1",
    "@tauri-apps/cli": "^2.9.6",
    "@types/node": "^25.0.2",
    "@vitejs/plugin-vue": "^6.0.3",
    "@vitest/coverage-v8": "^3.2.4",
    "@vue/test-utils": "^2.4.6",
    "concurrently": "^9.1.0",
    "cross-env": "^7.0.3",
    "electron": "^33.2.1",
    "electron-builder": "^25.1.8",
    "electron-vite": "^5.0.0",
    "get-port-please": "^3.1.2",
    "happy-dom": "^20.0.11",
    "nuxt": "^3.14.0",
    "typescript": "^5.6.0",
    "vitest": "^3.2.4",
    "vue": "^3.5.0",
    "vue-router": "^4.4.0",
    "vue-tsc": "^2.2.0",
    "wait-on": "^8.0.3"
  },
  "dependencies": {
    "@nuxtjs/mdc": "^0.19.1",
    "@nuxtjs/tailwindcss": "^6.14.0",
    "@pinia/nuxt": "^0.11.3",
    "@primevue/nuxt-module": "^4.5.3",
    "@primevue/themes": "^4.5.3",
    "@tauri-apps/plugin-dialog": "^2.4.2",
    "@types/dompurify": "^3.0.5",
    "@vue-flow/background": "^1.3.2",
    "@vue-flow/controls": "^1.1.3",
    "@vue-flow/core": "^1.48.1",
    "@vue-flow/minimap": "^1.5.4",
    "@vueuse/core": "^14.1.0",
    "dompurify": "^3.3.1",
    "highlight.js": "^11.11.1",
    "isomorphic-dompurify": "^2.34.0",
    "marked": "^17.0.1",
    "mermaid": "^11.12.2",
    "nuxt-monaco-editor": "^1.4.0",
    "pinia": "^3.0.4",
    "primeicons": "^7.0.0",
    "primevue": "^4.5.3",
    "yaml": "^2.8.2",
    "zod": "^4.2.0"
  }
}
